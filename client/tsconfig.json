{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./", // This sets the base directory for your imports
    "paths": {
      "@/types/*": ["src/types/*"],
      "@/enums/*": ["src/enums/*"]
    }
  },
  "exclude": ["node_modules"]
}
